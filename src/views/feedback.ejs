<%- include("./partials/header.ejs") %>

<style>

html,
body {
  width: 100%;
  height: 100%;
}

</style>

<div class="w-full h-full">

<div class="w-full h-full p-10 text-white bg-gray-800 relative">
  <!-- Back button -->
  <a href="/user/setting">
    <button class="absolute top-0 left-0 m-4 px-4 py-2 text-white rounded" style="font-family: Inter">
      Back
    </button>
  </a>

  <div id="allcomments" class="w-full h-4/5 overflow-y-auto" style="scrollbar-width: none; -ms-overflow-style: none">

    <div id="founder-and-user-comment-section">

      <!-- Founder Comment Section -->
      <% founder.forEach(function(item) { %>
        
        <% if(user._id.toString() == item.commentuserId.toString()){ %>
          <div class="commentdiv flex flex-col w-full md:w-3/4 mt-6 md:mt-10 mb-10" data-commentid="<%= item._id %>">
          <div class="grid gap-20 comment">
            <div class="border-b border-zinc-700 pb-4 mb-4">
              <div class="content">
                <div class="flex justify-between items-center gap-4">
                  <div class="flex gap-4">
                    <div class="h-12 w-12 avatar">
                      <img src="<%= item.avatar %>" class="w-full h-full object-cover rounded-full" />
                    </div>
                    <div>
                      <h5 class="font-medium" style="font-family: Inter">
                        <%= item.username %>
                      </h5>
                      <span class="text-xs uppercase text-gray-400" style="font-family: Inter"><%= item.createdAt %></span>
                    </div>
                  </div>
                  <div class="relative dropdownDiv">
                    <button class="dropdownButton text-gray-400 hover:text-gray-600">
                      <i class="pointer-events-none ri-more-2-fill"></i>
                    </button>
                    <div class="dropdownMenu absolute right-0 hidden mt-2 w-32 bg-black rounded-md shadow-lg">
                      <!-- <button class="edit w-full text-left px-4 py-2 text-sm text-white hover:bg-[#1f1f1e]">Edit</button> -->
                      <button class="delete w-full text-left px-4 py-2 text-sm text-gray hover:bg-[#1f1f1e]">Delete</button>
                    </div>
                  </div>
                </div>
        
                <div class="content-comment ml-16">
                  <p class="mt-3 md:mt-4 text-sm md:text-base" style="font-family: Inter">
                    <%= item.comment %>
                  </p>
                </div>
        
                <div class="flex justify-between mt-4 ml-16">
                  <div class="flex items-center gap-2" data-commentid="<%= item._id %>">
                    <button class="ratebtn flex items-center justify-center border border-gray-300 rounded-full w-8 h-8 hover:border-gray-500">
                      <i class="ri-thumb-up-fill text-[#FDCD55] pointer-events-none"></i>
                    </button>
                    <div class="value font-medium text-sm leading-5 text-center text-green-600"><%= item.rate.length %></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }else{ %>
          <div class="commentdiv flex flex-col w-full md:w-3/4 mt-6 md:mt-10 mb-10" data-commentid="<%= item._id %>">
            <div class="grid gap-20 comment">
              <div class="border-b border-zinc-700 pb-4 mb-4">
                <div class="content">
                  <div class="flex justify-between items-center gap-4">
                    <div class="flex gap-4">
                      <div class="h-12 w-12 avatar">
                        <img src="<%= item.avatar %>" class="w-full h-full object-cover rounded-full" />
                      </div>
                      <div>
                        <h5 class="font-medium" style="font-family: Inter">
                          <%= item.username %>
                        </h5>
                        <span class="text-xs uppercase text-gray-400" style="font-family: Inter"><%= item.createdAt %></span>
                      </div>
                    </div>
                    <div class="relative dropdownDiv">
                      <button class="dropdownButton text-gray-400 hover:text-gray-600">
                        <i class="pointer-events-none ri-more-2-fill"></i>
                      </button>
                      <div class="dropdownMenu absolute right-0 hidden mt-2 w-32 bg-black rounded-md shadow-lg">
                        <button class="reply w-full text-left px-4 py-2 text-sm text-white hover:bg-[#1f1f1e]">Reply</button>
                      </div>
                    </div>
                  </div>
          
                  <div class="content-comment ml-16">
                    <p class="mt-3 md:mt-4 text-sm md:text-base" style="font-family: Inter">
                      <%= item.comment %>
                    </p>
                  </div>
          
                  <div class="flex justify-between mt-4 ml-16">
                    <div class="flex items-center gap-2" data-commentid="<%= item._id %>">
                      <button class="ratebtn flex items-center justify-center border border-gray-300 rounded-full w-8 h-8 hover:border-gray-500">
                        <i class="ri-thumb-up-fill text-[#FDCD55] pointer-events-none"></i>
                      </button>
                      <div class="value font-medium text-sm leading-5 text-center text-green-600"><%= item.rate.length %></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% } %>

        
      <% }); %>

      <div id="user-comment-section">
      <!-- User Comment Section -->
      <% formatcomments.reverse().forEach(function(item) { %>
        
        <% if(user._id.toString() == item.commentuserId.toString()){ %>
          <div class="commentdiv flex flex-col w-full md:w-3/4 mt-6 md:mt-10 mb-10" data-commentid="<%= item._id %>">
          <div class="grid gap-20 comment">
            <div class="border-b border-zinc-700 pb-4 mb-4">
              <div class="content">
                <div class="flex justify-between items-center gap-4">
                  <div class="flex gap-4">
                    <div class="h-12 w-12 avatar">
                      <img src="<%= item.avatar %>" class="w-full h-full object-cover rounded-full" />
